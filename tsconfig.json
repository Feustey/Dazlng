{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@app/*": ["app/*"],
      "@components/*": ["app/components/*"],
      "@ui/*": ["app/components/ui/*"],
      "@lib/*": ["app/lib/*"],
      "@hooks/*": ["app/hooks/*"],
      "@contexts/*": ["app/contexts/*"],
      "@types/*": ["app/types/*"],
      "@utils/*": ["app/utils/*"],
      "@styles/*": ["app/styles/*"],
      "@public/*": ["public/*"],
      "@api/*": ["app/api/*"],
      "@models/*": ["app/models/*"],
      "@config/*": ["app/config/*"],
      "@locale/*": ["app/locale/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/**/*.ts",
    "app/**/*.tsx"
  ],
  "exclude": ["node_modules", ".next", "out"]
}
