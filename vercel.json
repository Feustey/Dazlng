{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "installCommand": "npm install --legacy-peer-deps",
  "rewrites": [
    {
      "source": "https://app.dazno.de/(.*)",
      "destination": "/user/$1"
    },
    {
      "source": "https://app.dazno.de/",
      "destination": "/user/dashboard"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/cleanup-otp",
      "schedule": "0 */1 * * *"
    }
  ]
} 