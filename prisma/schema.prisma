generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_ACCELERATE_URL")
}

model History {
  id        String   @id @default(cuid())
  date      DateTime @default(now())
  price     Float    @db.Decimal(20, 8)
  volume    Float    @db.Decimal(20, 8)
  marketCap Float    @db.Decimal(20, 8)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([date])
  @@index([marketCap])
}

model PeerOfPeer {
  id              String   @id @default(cuid())
  nodePubkey      String
  peerPubkey      String
  alias           String
  platform        String
  version         String
  total_fees      Float    @db.Decimal(20, 8)
  avg_fee_rate_ppm Float   @db.Decimal(10, 2)
  total_capacity  Float    @db.Decimal(20, 8)
  active_channels Int
  total_volume    Float    @db.Decimal(20, 8)
  total_peers     Int
  uptime          Float    @db.Decimal(10, 2)
  opened_channel_count Int
  color           String
  address         String
  closed_channel_count Int
  pending_channel_count Int
  avg_capacity    Float    @db.Decimal(20, 8)
  avg_fee_rate    Float    @db.Decimal(10, 2)
  avg_base_fee_rate Float  @db.Decimal(10, 2)
  betweenness_rank Int
  eigenvector_rank Int
  closeness_rank  Int
  weighted_betweenness_rank Int
  weighted_closeness_rank Int
  weighted_eigenvector_rank Int
  timestamp       DateTime @default(now())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  node            Node     @relation(fields: [nodePubkey], references: [pubkey])

  @@index([nodePubkey])
  @@index([timestamp])
  @@index([peerPubkey])
  @@index([platform])
  @@index([total_capacity])
  @@index([active_channels])
}

model Node {
  id                      String   @id @default(cuid())
  pubkey                  String   @unique
  alias                   String
  platform                String
  version                 String
  total_fees              Float    @db.Decimal(20, 8)
  avg_fee_rate_ppm        Float    @db.Decimal(10, 2)
  total_capacity          Float    @db.Decimal(20, 8)
  active_channels         Int
  total_volume            Float    @db.Decimal(20, 8)
  total_peers             Int
  uptime                  Float    @db.Decimal(10, 2)
  opened_channel_count    Int
  color                   String
  address                 String
  closed_channel_count    Int
  pending_channel_count   Int
  avg_capacity            Float    @db.Decimal(20, 8)
  avg_fee_rate            Float    @db.Decimal(10, 2)
  avg_base_fee_rate       Float    @db.Decimal(10, 2)
  betweenness_rank        Int
  eigenvector_rank        Int
  closeness_rank          Int
  weighted_betweenness_rank Int
  weighted_closeness_rank   Int
  weighted_eigenvector_rank Int
  timestamp               DateTime @default(now())
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
  peersOfPeers           PeerOfPeer[]

  @@index([timestamp])
  @@index([platform])
  @@index([total_capacity])
  @@index([active_channels])
  @@index([betweenness_rank])
  @@index([eigenvector_rank])
  @@index([closeness_rank])
}

model User {
  id                    String    @id @default(cuid())
  email                 String    @unique
  name                  String?
  password              String
  role                  String    @default("user")
  subscriptionStatus    String?
  subscriptionTier      String?
  subscriptionStartDate DateTime?
  subscriptionEndDate   DateTime?
  emailVerified         DateTime?
  image                 String?
  nodePubkey            String?   @unique
  sessions              Session[]
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([email])
}

model Transaction {
  id        String   @id @default(cuid())
  amount    Float
  status    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([createdAt])
}

model Session {
  id        String   @id @default(cuid())
  sessionId String   @unique
  email     String
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [email], references: [email])

  @@index([sessionId])
  @@index([email])
  @@index([expiresAt])
}

model VerificationCode {
  id        String   @id @default(cuid())
  email     String
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email])
  @@index([expiresAt])
}

model CentralityData {
  id        String   @id @default(cuid())
  nodePubkey String
  metric    String
  value     Float
  timestamp DateTime @default(now())

  @@index([nodePubkey])
  @@index([metric])
  @@index([timestamp])
}

model Recommendation {
  id        String   @id @default(cuid())
  nodePubkey String
  type      String
  content   String
  priority  Int
  status    String   @default("pending")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([nodePubkey])
  @@index([type])
  @@index([status])
}

model NetworkSummary {
  id              String   @id @default(cuid())
  totalNodes      Int
  totalChannels   Int
  totalCapacity   Float    @db.Decimal(20, 8)
  avgChannelSize  Float    @db.Decimal(20, 8)
  medianFeeRate   Float    @db.Decimal(10, 2)
  timestamp       DateTime @default(now())

  @@index([timestamp])
  @@index([totalCapacity])
  @@index([avgChannelSize])
}

model NodeStats {
  id              String   @id @default(cuid())
  nodePubkey      String
  channelCount    Int
  capacity        Float    @db.Decimal(20, 8)
  feeRate         Float    @db.Decimal(10, 2)
  uptime          Float    @db.Decimal(10, 2)
  timestamp       DateTime @default(now())

  @@index([nodePubkey])
  @@index([timestamp])
  @@index([capacity])
  @@index([channelCount])
}

model RateLimit {
  id        String   @id @default(cuid())
  ip        String
  route     String
  count     Int      @default(0)
  resetAt   DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([ip, route])
  @@index([resetAt])
}

model Contact {
  id            String   @id @default(cuid())
  firstName     String
  lastName      String
  email         String
  companyName   String?
  jobTitle      String?
  companyPhone  String?
  companyWebsite String?
  interest      String
  message       String   @db.Text
  createdAt     DateTime @default(now())
  status        String   @default("new") // new, read, replied
} 
